<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minecraft"
    tools:context=".MinecraftActivity">

    <TextView
        android:id="@+id/questionmc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="Какая планета является самой большой в Солнечной системе?"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonmc1"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="15dp"
        android:text="Луна"
        app:layout_constraintEnd_toStartOf="@+id/buttonmc2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/questionmc" />

    <Button
        android:id="@+id/buttonmc2"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="38dp"
        android:text="Марс"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonmc1"
        app:layout_constraintTop_toTopOf="@+id/questionmc" />

    <Button
        android:id="@+id/buttonmc3"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="466dp"
        android:layout_marginEnd="15dp"
        android:text="Юпитер"
        app:layout_constraintEnd_toStartOf="@+id/buttonmc4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/questionmc" />

    <Button
        android:id="@+id/buttonmc4"
        android:layout_width="160dp"
        android:layout_height="54dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="464dp"
        android:layout_marginEnd="38dp"
        android:text="Нептун"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonmc3"
        app:layout_constraintTop_toTopOf="@+id/questionmc" />

